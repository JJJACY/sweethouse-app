<view class="container">
  <view class="cart-list">
    <van-card
      num="2"
      tag="标签"
      price="10.00"
      desc="描述信息"
      title="商品标题"
      thumb="{{ imageURL }}"
    >
    <view slot="footer">
      <van-button size="mini">按钮</van-button>
      <van-button size="mini">按钮</van-button>
    </view>
    </van-card>
  </view>
  <view class="cart-sub">
    <van-submit-bar
      price="{{ 3050 }}"
      button-text="提交订单"
      bind:submit="onClickButton"
      tip="{{ true }}"
    >
    </van-submit-bar>
  </view>
</view>