  height: 100%;
  background-color: #e5e5e5;
}
.goods-detail{
  border-radius: 20rpx;
  background-color: #fff;
}
.price{
  color: #f2270c;
  margin-top: 24rpx;
  margin-bottom: 0;
  padding: 0 36rpx;
  font-size: 32rpx;
}
.price-num{
  display: inline-block;
