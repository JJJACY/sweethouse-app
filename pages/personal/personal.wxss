.header{
  width: 100%;
  height: 268rpx;
  background: linear-gradient(90deg,#eb3c3c,#ff7459);
  box-shadow: 0 2px 4px rgba(228,57,60,.4);
  border-radius: 0 0 300px 300px/0 0 20px 20px;
}
.person-info{
  padding-top: 50rpx;
  display: flex;
  height: 268rpx;
}
.headimage{
  margin:0 30rpx 0 30rpx;
  width: 120rpx;
  height: 120rpx;
  background-color: #ccc;
}
.img{
  width: 120rpx;
  height: 120rpx;
}
.name-info{
  width: 100%;
  height: 122rpx;
}
.name{
  font-size: 14px;
  color: #fff;
}
.name-text{
  font-size: 12px;
  color: hsla(0,0%,100%,.7);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.body{
  width: 100%;
  height: 100%;
  margin-top: 40rpx;
}
.weblink{
  width: 100%;
  height: 102rpx;
  padding-left: 20rpx;
  line-height: 102rpx;
  color: #000000;
  border-bottom: 10rpx solid #e5e5e5;
}
.myorder{
  border-top: 2rpx solid #e5e5e5;
}


.navigator-hover {
  color:#f2270c;
}